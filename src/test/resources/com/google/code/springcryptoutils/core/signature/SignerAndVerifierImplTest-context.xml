<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:crypt="http://code.google.com/p/spring-crypto-utils/schema/crypt"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.google.com/p/spring-crypto-utils/schema/crypt http://code.google.com/p/spring-crypto-utils/schema/crypt.xsd">

    <bean id="publicKey" class="com.google.code.springcryptoutils.core.key.PublicKeyFactoryBean">
        <property name="keystore" ref="keystore"/>
        <property name="alias" value="test"/>
    </bean>

    <bean id="privateKey" class="com.google.code.springcryptoutils.core.key.PrivateKeyFactoryBean">
        <property name="keystore" ref="keystore"/>
        <property name="alias" value="test"/>
        <property name="password" value="password"/>
    </bean>

    <crypt:keystore id="keystore" location="classpath:keystore.jks" password="password"/>

    <bean id="signer" class="com.google.code.springcryptoutils.core.signature.SignerImpl">
        <property name="privateKey" ref="privateKey"/>
        <property name="algorithm" value="SHA1withRSA"/>
    </bean>

    <bean id="verifier" class="com.google.code.springcryptoutils.core.signature.VerifierImpl">
        <property name="publicKey" ref="publicKey"/>
        <property name="algorithm" value="SHA1withRSA"/>
    </bean>

</beans>