<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="publicKey" class="com.google.code.springcryptoutils.core.key.PublicKeyFactoryBean">
        <property name="keystore" ref="keystore"/>
        <property name="alias" value="test"/>
    </bean>

    <bean id="keystore" class="com.google.code.springcryptoutils.core.keystore.KeyStoreFactoryBean">
        <property name="keystore" value="classpath:keystore.jks"/>
        <property name="password" value="password"/>
        <property name="type" value="JKS"/>
    </bean>


</beans>